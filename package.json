{
  "name": "anki-canvas",
  "version": "0.0.1",
  "description": "JavaScript widget providing touch enabled canvas for drawing in AnkiDroid",
  "main": "index.js",
  "repository": "https://github.com/pigoz/anki-canvas",
  "author": "pigoz",
  "license": "MIT",
  "dependencies": {
    "@types/hyperscript": "^0.0.3",
    "hyperscript": "^2.0.2"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/jest": "^23.3.3",
    "@types/node": "^10.11.4",
    "chalk": "^2.4.1",
    "jest": "^23.6.0",
    "parcel-bundler": "^1.10.2",
    "parcel-plugin-bundle-manifest": "^0.2.0",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.2.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.1.1"
  },
  "scripts": {
    "test": "jest",
    "start": "parcel src/*.html",
    "build": "parcel build src/*.html",
    "dist": "yarn build && yarn ts-node scripts/dist.ts",
    "release": "rm -r dist && yarn build && yarn ts-node scripts/release.ts"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true,
        "mapCoverage": true
      }
    },
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "/test/.*\\.test\\.ts$"
  }
}
